{
  "name": "permaweb-llms-builder",
  "type": "module",
  "version": "0.0.1",
  "description": "Interactive tool to select and curate Permaweb documentation into llms.txt format for AI training",
  "keywords": [
    "permaweb",
    "arweave",
    "llms",
    "documentation",
    "ai",
    "training"
  ],
  "scripts": {
    "dev": "astro dev",
    "build": "bun run clean && astro build && bun run scripts/post-build.js",
    "build:vercel": "bun run clean && astro build --outdir=.vercel/output/static && bun run scripts/post-build.js",
    "preview": "astro preview",
    "preview:local": "bun run preview-server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist .vercel/output node_modules/.cache",
    "crawl": "bun run src/utils/crawler.js",
    "crawl:prod": "NODE_ENV=production bun run src/utils/crawler.js",
    "deploy:preview": "./scripts/deploy-preview.sh",
    "deploy:prod": "./scripts/deploy-prod.sh",
    "lint": "astro check",
    "validate": "bun run test && bun run lint && bun run build"
  },
  "dependencies": {
    "@astrojs/node": "^8.3.4",
    "@ar.io/wayfinder-core": "^0.0.5-alpha.4",
    "@ar.io/sdk": "^2.0.0",
    "astro": "^4.16.16",
    "defuddle": "^0.6.4",
    "flexsearch": "^0.8.205",
    "jsdom": "^25.0.1",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "vitest": "^3.2.4",
    "permaweb-deploy": "^1.1.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}