{
  "name": "permaweb-llms-builder",
  "type": "module",
  "version": "0.0.1",
  "description": "Interactive tool to select and curate Permaweb documentation into llms.txt format for AI training",
  "keywords": ["permaweb", "arweave", "llms", "documentation", "ai", "training"],
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",  
    "build": "astro check && astro build",
    "build:vercel": "astro check && astro build --outDir=.vercel/output/static",
    "preview": "astro preview",
    "astro": "astro",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "crawl": "bun run src/utils/crawler.js",
    "crawl:static": "bun run src/utils/crawler.js",
    "build-index": "bun run src/utils/crawler.js"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/node": "^8.3.4",
    "@ar.io/wayfinder-core": "^0.0.5-alpha.4",
    "@ar.io/sdk": "^2.0.0",
    "astro": "^4.16.16",
    "defuddle": "^0.6.4",
    "flexsearch": "^0.8.205",
    "jsdom": "^25.0.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "vitest": "^3.2.4"
  }
}