    "build-index": "bun run src/utils/static-crawler.js"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "astro": "^5.10.1",
    "defuddle": "^0.6.4",
    "flexsearch": "^0.8.205",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "vitest": "^3.2.4"
